<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
>
	<servlet>
		<servlet-name>ThreadSleep</servlet-name>
		<servlet-class>com.nortal.healthcare.testservlets.ThreadSleepServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ThreadSleep</servlet-name>
		<url-pattern>/sleep</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>ResponseStatus</servlet-name>
		<servlet-class>com.nortal.healthcare.testservlets.ResponseStatusServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ResponseStatus</servlet-name>
		<url-pattern>/status/*</url-pattern>
	</servlet-mapping>
</web-app>